{
  "name": "@fedify/hollo",
  "description": "Federated single-user microblogging software",
  "version": "0.7.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prod": "pnpm run migrate && tsx --env-file-if-exists=.env --dns-result-order=ipv6first bin/server.ts",
    "dev": "pnpm run migrate && tsx watch --env-file-if-exists=.env --dns-result-order=ipv6first bin/server.ts",
    "list:routes": "tsx --env-file-if-exists=.env bin/routes.ts",
    "test": "pnpm run migrate:test && vitest",
    "test:ci": "vitest",
    "check": "tsc && biome check .",
    "check:ci": "tsc && biome ci --reporter=github .",
    "check:coverage": "pnpm run migrate:test && vitest --coverage",
    "migrate": "drizzle-kit migrate",
    "migrate:test": "dotenvx run -f .env.test -- drizzle-kit migrate",
    "migrate:generate": "drizzle-kit generate",
    "rebuild-timelines": "tsx --env-file-if-exists=.env scripts/rebuild-timelines.ts",
    "rerender-posts": "tsx --env-file-if-exists=.env scripts/rerender-posts.ts"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.716.0",
    "@fedify/fedify": "~1.5.3",
    "@fedify/markdown-it-hashtag": "~0.2.0",
    "@fedify/markdown-it-mention": "~0.1.1",
    "@fedify/postgres": "~0.3.0",
    "@hexagon/base64": "^2.0.4",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.2.2",
    "@js-temporal/polyfill": "^0.5.0",
    "@logtape/file": "~1.0.4",
    "@logtape/logtape": "~1.0.4",
    "@logtape/sentry": "^1.0.4",
    "@sentry/core": "^8.47.0",
    "@sentry/node": "^8.47.0",
    "@shikijs/markdown-it": "^3.5.0",
    "@supercharge/promise-pool": "^3.2.0",
    "argon2": "^0.41.1",
    "cheerio": "^1.0.0",
    "cssfilter": "^0.0.11",
    "csv-writer-portable": "^1.7.6",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "es-toolkit": "^1.30.1",
    "fluent-ffmpeg": "^2.1.3",
    "flydrive": "^1.1.0",
    "hono": "^4.6.14",
    "iso-639-1": "^3.1.3",
    "markdown-it": "^14.1.0",
    "markdown-it-highlightjs": "^4.2.0",
    "markdown-it-replace-link": "^1.2.2",
    "mime": "^4.0.6",
    "neat-csv": "^7.0.0",
    "open-graph-scraper": "^6.8.3",
    "otpauth": "^9.3.6",
    "postgres": "^3.4.5",
    "qrcode": "^1.5.4",
    "semver": "^7.6.3",
    "sharp": "^0.33.5",
    "ssrfcheck": "^1.1.1",
    "tsx": "^4.19.2",
    "uuidv7-js": "^1.1.4",
    "x-forwarded-fetch": "^0.2.0",
    "xss": "^1.0.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@dotenvx/dotenvx": "^1.37.0",
    "@reporters/github": "^1.7.2",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.13.4",
    "@types/qrcode": "^1.5.5",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "3.1.4",
    "dotenv": "^16.5.0",
    "linkedom": "^0.18.10",
    "timekeeper": "^2.3.1",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf"
}
